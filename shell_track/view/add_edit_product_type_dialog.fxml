<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="230.0" prefWidth="450.0" style="-fx-background-color: white; -fx-border-color: #155c72; -fx-border-width: 5;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shell_track.view.ProductTypeController">
   <children>
      <Label alignment="CENTER" layoutX="273.0" layoutY="93.0" prefHeight="23.0" prefWidth="137.0" text="Product Type: " textFill="#155c72">
         <font>
            <Font name="Book Antiqua Bold Italic" size="18.0" />
         </font></Label>
      <TextField fx:id="newProductType" alignment="CENTER" layoutX="223.0" layoutY="117.0" prefHeight="27.0" prefWidth="237.0" promptText="Enter Product">
         <font>
            <Font name="Book Antiqua Bold" size="12.0" />
         </font></TextField>
      <Button fx:id="addProduct" layoutX="235.0" layoutY="159.0" mnemonicParsing="false" onAction="#addProductType" prefHeight="27.0" prefWidth="65.0" text="Add">
         <font>
            <Font name="Book Antiqua Bold Italic" size="14.0" />
         </font></Button>
      <Button fx:id="cancelAdd" layoutX="371.0" layoutY="159.0" mnemonicParsing="false" onAction="#cancelAdd" prefHeight="28.0" prefWidth="78.0" text="Cancel">
         <font>
            <Font name="Book Antiqua Bold Italic" size="14.0" />
         </font></Button>
      <Button fx:id="deleteProduct" layoutX="303.0" layoutY="159.0" mnemonicParsing="false" onAction="#deleteProductType" prefHeight="28.0" prefWidth="65.0" text="Delete">
         <font>
            <Font name="Book Antiqua Bold Italic" size="14.0" />
         </font></Button>
      <SplitPane layoutX="14.0" layoutY="12.0" prefHeight="210.0" prefWidth="200.0">
         <items>
            <ListView fx:id="productList" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: lightgray; -fx-border-color: #155c72; -fx-border-width: 5;" />
         </items>
      </SplitPane>
      <Label alignment="CENTER" layoutX="223.0" layoutY="14.0" prefHeight="27.0" prefWidth="237.0" text="-Product Managment-" textFill="#155c72" underline="true">
         <font>
            <Font name="Book Antiqua Bold Italic" size="22.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
